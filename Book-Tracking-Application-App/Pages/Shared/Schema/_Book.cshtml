@using Book_Tracking_Application_Models
@model Book
{
    "@@context": "https://schema.org",
    "@@type": "Book",
@if (!String.IsNullOrWhiteSpace(@Model.ISBN))
{
    @Html.Raw(String.Format("\"isbn\": \"{0}\",", Model.ISBN))
}
@if (!String.IsNullOrWhiteSpace(@Model.Title))
{
    @Html.Raw(String.Format("\"title\": \"{0}\",", Model.Title))
}
    @if(!String.IsNullOrWhiteSpace(@Model.Author))
{
    @Html.Raw(@String.Format("\"author\": \"{0}\",", Model.Author))
}
    @if(!String.IsNullOrWhiteSpace(@Model?.ReleaseDate.ToString()))
{
    @Html.Raw(@String.Format("\"releasedate\": \"{0}\",", Model?.ReleaseDate.ToString()))
}